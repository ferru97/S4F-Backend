<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet  id="1-createUserTable"  author="vFerrulli">
        <createTable  tableName="user">
            <column  name="id"  type="BIGINT"  autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="first_name"  type="VARCHAR(100)">
                <constraints  nullable="false"/>
            </column>
            <column  name="last_name"  type="VARCHAR(100)">
                <constraints  nullable="false"/>
            </column>
            <column  name="nickname"  type="VARCHAR(50)">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column  name="email"  type="VARCHAR(150)">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column  name="password"  type="VARCHAR(300)">
                <constraints  nullable="false"/>
            </column>
            <column  name="birthday"  type="DATE">
                <constraints  nullable="false"/>
            </column>
            <column  name="active"  type="BOOLEAN">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-userTable-email-index" author="vFerrulli">
        <createIndex indexName="email_index" tableName="user">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="2-userTable-nickname-index" author="vFerrulli">
        <createIndex indexName="nickname_index" tableName="user">
            <column name="nickname"/>
        </createIndex>
    </changeSet>

    <changeSet id="2-userTable-email-index" author="vFerrulli">
        <createIndex indexName="email_index" tableName="user">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="2-userTable-emailNickname-index" author="vFerrulli">
        <createIndex indexName="emailNickname_index" tableName="user">
            <column name="email"/>
            <column name="nickname"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>